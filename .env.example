# OpenAI 兼容的 LLM 配置
OPENAI_API_KEY=your_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# 代理配置（可选）
HTTP_PROXY=
HTTPS_PROXY=

# 日志级别
LOG_LEVEL=INFO

# Autogen 兼容性补丁
# 用于修复某些 OpenAI 兼容服务器(如 Gemini API 转发)不支持 additionalProperties 字段的问题
# 如果使用标准 OpenAI API,建议设置为 false
# 如果使用 Gemini 代理或其他不支持完整 JSON Schema 的服务器,设置为 true
# 默认: false (不启用)
# 当前建议: true (因为使用 Gemini API 转发服务器)
ENABLE_AUTOGEN_PATCH=true

# Autogen 最大轮数配置
# Agent 执行任务时的最大消息轮数，防止无限循环
# 默认: 30
AUTOGEN_MAX_TURNS=30

# Playwright 配置
HEADLESS=false
BROWSER_TIMEOUT=30000

# 扫描器配置
# 自动校准：自动过滤重复的误报响应（强烈推荐启用）
SCANNER_AUTO_CALIBRATE=true

# 速率限制：每秒最大请求数（避免触发 WAF/IDS）
SCANNER_RATE_LIMIT=40

# 递归深度：目录扫描的递归深度（0=不递归）
SCANNER_RECURSION_DEPTH=0

# 请求超时时间（秒）
SCANNER_TIMEOUT=10

# API 测试配置
# 是否测试 HTTP 方法
API_TEST_METHODS=true

# 是否测试 API 认证
API_TEST_AUTH=true

# 是否测试 API 速率限制
API_TEST_RATE_LIMIT=true

# 认证测试配置
# 是否测试认证绕过
TEST_AUTH_BYPASS=true

# 是否测试 IDOR 漏洞
TEST_IDOR=true

# IDOR 测试的 ID 范围
IDOR_ID_RANGE=100
